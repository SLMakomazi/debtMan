# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES=7

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=admin
DB_PASSWORD=admin
DB_NAME=debt_manager

# Credit Score API (Experian South Africa)
EXPERIAN_API_KEY=your_experian_api_key
EXPERIAN_API_URL=https://saas.experian.co.za/api/v1/credit-bureau/consumer-credit-profile

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 // 15 minutes
RATE_LIMIT_MAX=100

# CORS
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/v1/auth/microsoft/callback
